    <TextView
        android:id="@+id/dangerzoneheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="@string/dangerzoneheader" />

    <TextView
        android:id="@+id/locaationheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="123dp"
        android:text="@string/locationheader" />

    <EditText
        android:id="@+id/locationplaceholder"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="152dp"
        android:autofillHints="Add in location"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/locationPlaceHolder" />

    <TextView
        android:id="@+id/risklevelheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="203dp"
        android:text="@string/risklevelheader" />

    <Spinner
        android:id="@+id/risklevelspinner"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="238dp" />

    <TextView
        android:id="@+id/descriptionheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="294dp"
        android:text="@string/descriptionHeader" />

    <EditText
        android:id="@+id/descriptionfillin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="325dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/submitdangerzonebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="276dp"
        android:text="@string/dangerzonebutton" />


</RelativeLayout>
