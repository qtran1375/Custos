<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".UserFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#212121"
            android:padding="8dp">


            <TextView
                android:id="@+id/imageFriendsReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_person_add_black_24dp"
                android:text="Search and Add Friend"
                android:textColor="#fece2f"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textCursorDrawable="@color/colorwhite"
                android:textSize="15sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/search_friends_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="544dp"
            android:drawableRight="@drawable/ic_search_yellow_29dp"
            android:text="Search  "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="335dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:hint="Search..."
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_search_yellow_29dp"
            android:background="@drawable/sv_round_search"
            android:id="@+id/search_friends"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_friends"
            android:layout_below="@+id/search_friends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp" />

    </RelativeLayout>
</LinearLayout>