<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/relLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D"
    android:padding="8dp"
    tools:ignore="InvalidId">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#212121">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewOtherUser"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/back_button_otherUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:transitionName="back"
                android:drawableTop="@drawable/ic_arrow_back_yellow_24dp"/>



            <TextView
                android:id="@+id/textOtherUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="75dp"
                android:text="Email"
                android:layout_toRightOf="@+id/imageViewOtherUser"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textCursorDrawable="@color/colorwhite"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/textOtherUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="Name"
                android:layout_toRightOf="@+id/imageViewOtherUser"
                android:textColor="#FECE2F"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/colorwhite"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:padding="30dp">


        <TextView
            android:id="@+id/textOtherUserName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_account_circle_yellow_24dp"
            android:drawablePadding="10dp"
            android:text="Full Name"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/textOtherUserEmail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_email_yellow_24dp"
            android:drawablePadding="10dp"
            android:paddingTop="30dp"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/textOtherUserPhoneNumDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_phone_android_yellow_24dp"
            android:drawablePadding="10dp"
            android:paddingTop="30dp"
            android:text="Phone Number"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/emergencyContactDisplayOtherUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_contact_phone_yellow_24dp"
            android:drawablePadding="10dp"
            android:paddingTop="30dp"
            android:text="Emergency Contact"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textCursorDrawable="@color/colorwhite"
            android:textSize="15dp" />

        <Button
            android:id="@+id/sendRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="195dp"
            android:background="#fece2f"
            android:text="Add friend"
            android:textSize="19dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/declineRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#85081b"
            android:text="Decline"
            android:textSize="19dp"
            android:textStyle="bold" />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    </RelativeLayout>












</LinearLayout>