<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#212121">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher"
                android:transitionName="profile_picture"/>
            <TextView
                android:id="@+id/signout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="328dp"
                android:transitionName="logout"
                android:drawableTop="@drawable/ic_directions_run_yellow_24dp"/>
            <TextView
                android:id="@+id/back_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:transitionName="back"
                android:drawableTop="@drawable/ic_arrow_back_yellow_24dp"/>



            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="75dp"
                android:text="Email"
                android:layout_toRightOf="@+id/imageView"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textCursorDrawable="@color/colorwhite"
                android:textSize="14sp"
                android:transitionName="display_email"/>
            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="Name"
                android:layout_toRightOf="@+id/imageView"
                android:textColor="#FECE2F"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/colorwhite"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="display_name"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">



            <TextView
                android:id="@+id/textName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_account_circle_yellow_24dp"
                android:drawablePadding="10dp"
                android:layout_marginLeft="5dp"
                android:text="Full Name"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:transitionName="full_name"/>





            <TextView
                android:id="@+id/textEmail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email_yellow_24dp"
                android:drawablePadding="10dp"
                android:paddingTop="30dp"
                android:layout_marginLeft="5dp"
                android:text="Email"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:transitionName="email"/>





            <TextView
                android:id="@+id/textPhoneNumDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_android_yellow_24dp"
                android:drawablePadding="10dp"
                android:textColor="#FFFFFF"
                android:paddingTop="30dp"
                android:layout_marginLeft="5dp"
                android:text="Phone Number"
                android:textSize="18dp"                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:transitionName="phone_number"/>
        <TextView
            android:id="@+id/textPINdisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_fiber_pin_yellow_24dp"
            android:drawablePadding="10dp"
            android:textColor="#FFFFFF"
            android:paddingTop="30dp"
            android:layout_marginLeft="5dp"
            android:text="PIN"
            android:textSize="18dp"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:transitionName="pin"/>




            <TextView
                android:id="@+id/homeLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location_on_yellow_24dp"
                android:drawablePadding="10dp"
                android:paddingTop="30dp"
                android:layout_marginLeft="5dp"
                android:text="Home Location"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textCursorDrawable="@color/colorwhite"
                android:transitionName="address"/>

        <Button
            android:id="@+id/editUserinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit INFO"
            android:background="#fece2f"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginTop="195dp"
            android:transitionName="edit_info"/>





    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    </RelativeLayout>












</LinearLayout>