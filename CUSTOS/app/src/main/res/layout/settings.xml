<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#1D1D1D"
    android:orientation="vertical"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#212121"
            android:padding="8dp">

            <TextView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/settings_text"
                android:textColor="#FECE2F"
                android:layout_marginLeft="10dp"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textCursorDrawable="@color/colorwhite"
                android:textSize="25sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewSetting"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="35dp"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/textNameSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="55dp"
                android:layout_toRightOf="@+id/imageViewSetting"
                android:includeFontPadding="false"
                android:text="Name"
                android:textColor="#FECE2F"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textCursorDrawable="@color/colorwhite"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settingsSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="75dp"
                android:layout_toRightOf="@+id/imageViewSetting"
                android:text="View Profile"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textCursorDrawable="@color/colorwhite"
                android:textSize="17sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">


        <Button
            android:id="@+id/reportBug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#fece2f"
            android:text="@string/report_a_problem"
            android:textSize="19sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/SettingReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#fece2f"
            android:text="@string/information"
            android:textSize="19sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/darkMode"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#fece2f"
            android:gravity="center"
            android:text="@string/light_dark_mode"
            android:textSize="19sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/locationSwitch"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#fece2f"
            android:gravity="center"
            android:text="@string/location_text_switch"
            android:textSize="19sp"
            android:textStyle="bold" />


        <Switch
            android:id="@+id/dangerSwitch"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#fece2f"
            android:gravity="center"
            android:text="DANGER ZONES"
            android:textSize="19sp"
            android:textStyle="bold" />




    </LinearLayout>

    <TextView
        android:id="@+id/signout_button_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_directions_run_yellow_50dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="normal"/>


</LinearLayout>