<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#1D1D1D"
    android:orientation="vertical"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#212121"
            android:padding="8dp">

            <TextView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="Settings"
                android:textColor="#FECE2F"
                android:layout_marginLeft="10dp"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textCursorDrawable="@color/colorwhite"
                android:textSize="25sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewSetting"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="35dp"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/textNameSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="55dp"
                android:layout_toRightOf="@+id/imageViewSetting"
                android:includeFontPadding="false"
                android:text="Name"
                android:textColor="#FECE2F"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textCursorDrawable="@color/colorwhite"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settingsSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="75dp"
                android:layout_toRightOf="@+id/imageViewSetting"
                android:text="View Profile"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textCursorDrawable="@color/colorwhite"
                android:textSize="17sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/reportBug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report a problem"
            android:background="#fece2f"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginTop="70dp"
            android:transitionName="edit_info"/>


        <Button
            android:id="@+id/SettingReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/information"
            android:background="#fece2f"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginTop="20dp"
            android:transitionName="edit_info"/>

        <Switch
            android:id="@+id/darkMode"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="#fece2f"
            android:gravity="center"
            android:layout_marginTop="20dp"


            android:text="@string/light_dark_mode"
            android:textSize="19sp"
            android:textStyle="bold" />





    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cardViewReport"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:background="#212121">


    </RelativeLayout>




</LinearLayout>